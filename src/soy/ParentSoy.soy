{namespace ParentSoy}

/**
 * @param childrenArr
 */
{template .render}
	<div style="padding-left: 16px;">
		Parent:<button onClick="addChild">Add a Child!</button>

		{foreach $child in $childrenArr}
			{call ChildSoy.render}
				{param index: index($child) /}
				{param subTree: false /}
			{/call}
		{/foreach}
	</div>
{/template}
